<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/minigamesbg"
        android:scaleType="centerCrop"
        tools:context=".LandingActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="25dp"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingTop="200dp"

                      android:layout_gravity="center_horizontal">
            <include
                    layout="@layout/game_layout_1"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"
            />
            <include
                    layout="@layout/game_layout_2"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_3"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_4"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_5"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_6"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_7"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"
            />
        </LinearLayout>
    </ScrollView>


    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/iconbg" android:id="@+id/icon_maps"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.051" app:layout_constraintVertical_bias="0.019"/>

    <ImageButton
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            android:layout_height="50dp" app:srcCompat="@drawable/iconsmap"
            android:id="@+id/maps_button" android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.088" app:layout_constraintVertical_bias="0.035"
            android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/iconbg" android:id="@+id/icon_settings"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.951" app:layout_constraintVertical_bias="0.019"/>
    <ImageButton
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp" app:srcCompat="@drawable/iconssettings"
            android:id="@+id/settings_button" android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.923" app:layout_constraintVertical_bias="0.018"
            android:layout_marginTop="10dp" android:layout_marginEnd="-1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>