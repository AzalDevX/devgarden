<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LandingActivity">


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_map_24"
            android:id="@+id/maps_button" android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.044" app:layout_constraintVertical_bias="0.028"
    />

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/green_800"
            android:textStyle="bold"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.039" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_settings_24"
            android:id="@+id/settings_button" android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.956" app:layout_constraintVertical_bias="0.028"
    />
    <ScrollView
            android:layout_width="410dp"
            android:layout_height="641dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="60dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center_horizontal">
            <include
                    layout="@layout/game_layout_1"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"
            />
            <include
                    layout="@layout/game_layout_2"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_3"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_4"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_5"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_6"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"

            />
            <include
                    layout="@layout/game_layout_7"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginVertical="10dp"
            />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>